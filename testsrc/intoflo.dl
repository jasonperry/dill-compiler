(* test when int overflows *)

open stdio;

proc main()
begin
  var x: Int = 1;
  while x > 0 loop
    x = x * 2;
    printInt(x);
  endwhile
  printInt(x-1); (* should be largest positive *)

  var y: Int = 4500300200100;
  printInt(y);
  y = 9223372036854775807; (* max 64-bit *)
  printInt(y);

end main